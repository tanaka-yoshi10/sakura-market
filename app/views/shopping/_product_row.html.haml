.col-xs-6.col-md-3
  .thumbnail
    .trim
      = image_tag product.image.thumb.url, class: "product-thumbnail" if product.image?
    .caption
      %h3
        = link_to product.name, shopping_path(product)
      %span.text-right 単価
      %span{style:'color: green'}  #{number_to_currency product.price, :locale => 'ja'}
      = form_for [order, order_item], remote: true do |f|
        .input-group
          = f.number_field :quantity, value: 1, class: "form-control", id: "quantity-#{idx}", min: 1
          = f.hidden_field :product_id, value: product.id
          = f.submit "カートに入れる", class: "btn btn-primary", id: "add-cart-#{idx}"
