= form_for [:admin, @product] do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field.input-group
    = f.label :name, "商品名"
    = f.text_field :name, class: "form-control"
  .field.input-group
    = f.label :price, "価格"
    = f.text_field :price, class: "form-control"
  .field.input-group
    = f.label :description, "商品説明"
    = f.text_area :description, class: "form-control"
  .field.input-group
    = f.label :display_flag, "表示する"
    = f.check_box :display_flag
  .field.input-group
    = f.label :display_order, "表示順序"
    = f.text_field :display_order, class: "form-control"
  .field.input-group
    = f.label :image, "商品画像"
    = f.file_field :image, class: "filestyle", data: {"icon": "false", "buttonText": "ファイルを選択する"}
  .media
    %label 登録されている画像
    .media-left
      = image_tag @product.image.thumb.url class: "media-object" if @product.image?
  .actions
    = f.submit '保存する', class: "btn btn-primary"
