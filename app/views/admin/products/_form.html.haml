= simple_form_for [:admin, @product] do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name, label: '商品名', input_html: { size: 50 }
  = f.input :price, label: '価格', as: :decimal, input_html: { size: 11 }
  = f.input :description, label: '商品説明', as: :text, input_html: { rows: 5, cols: 50 }
  = f.input :display_flag, label: '表示する', as: :boolean
  = f.input :display_order, label: '表示順序', as: :decimal
  = f.input :image, label: '商品画像', as: :file, class: "filestyle", data: {"icon": "false", "buttonText": "ファイルを選択する"}
  .media
    %label 登録されている画像
    .media-left
      = image_tag @product.image.thumb.url class: "media-object" if @product.image?
  = f.button :submit, '保存する', class: "btn btn-primary"
