%h1 ログインする
= simple_form_for([:admin, @user], url: '/login', method: :post) do |f|
  - if flash[:alert]
    .alert.alert-danger
      = flash[:alert]
  = hidden_field_tag :referer, flash[:referer]
  = f.error_notification
  = f.input :email
  = f.input :password
  = f.button :submit, 'ログイン', class: 'btn btn-primary'
= link_to 'サインアップ', sign_up_path, class: 'btn btn-info', style: 'margin-top: 10px;'
