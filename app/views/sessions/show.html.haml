%h1 ログインする
= simple_form_for([:admin, @user], url: '/login', method: :post) do |f|
  - if flash[:alert]
    .alert.alert-danger
      = flash[:alert]
  = f.error_notification
  = hidden_field_tag :referer, flash[:referer]
  = f.input :email, input_html: { size: 30, minlength: 1 }
  = f.input :password, input_html: { size: 30 }
  = f.button :submit, 'ログイン'
